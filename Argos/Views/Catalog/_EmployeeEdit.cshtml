@model Argos.ViewModels.Generic.EmployeeVm
@using Argos.Models.HumanResources
@using Argos.Support


@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("SaveEmployee", "Catalog", FormMethod.Post, new { id = "EmployeeForm" }))
{
    @Html.AntiForgeryToken()

    <ul class="nav nav-tabs clearfix">
        <li class="active">
            <a data-toggle="tab" href="#general" id="tabMainProduct" style="background-color:whitesmoke !important">
                <span class="fa fa-black-tie"></span>
                Datos del empleado
            </a>
        </li>
        <li>
            <a data-toggle="tab" href="#addresses" id="tabAddress" style="background-color:whitesmoke !important">
                <span class="fa fa-street-view"></span>
                Direcciones
            </a>
        </li>

        <li class="pull-right">
            <div>
                <button type="submit" id="EditEmployeeSave" title="Guardar datos del empleado" class="btn btn-success  btn-round">
                    <span class="fa fa-save"></span>

                </button>
                <button type="button" class="btn btn-default btn-round" id="EditCancel">
                    <span class="fa fa-times"></span>
                </button>
            </div>
        </li>
    </ul>
    <div class="tab-content row">
        <div id="general" class="tab-pane fade in active">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel panel-default">
                <div class="panel-body">
                    <hr />
                    <div class="row">
                        <div class="col-md-3 btn-group-vertical">
                            <div style="position:relative">
                                <img src="@Model.Image" id="imgPerson" class="img-responsive" style="min-height:150px" />
                                <button type="button" id="btnDropImage" class="@Model.DropImageButton" style="position:absolute; top:0;" onclick="RemoveImage()">
                                    <span class="fa fa-trash"></span>
                                </button>
                            </div>

                            <label id="btnUpload" class="btn btn-success btn-xs">
                                <input type="file" id="fileUpl" name="images" onchange="OnImageLoaded(this)" style="display:none;">
                                <span class="fa fa-upload"></span>
                            </label>
                        </div>

                        <div class="form-group col-md-7">
                            @Html.LabelFor(model => model.Employee.Name, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                @Html.EditorFor(model => model.Employee.Name, new { htmlAttributes = new { @class = "form-control text-capitalize input-sm", autocompleate = "off" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.Employee.Gender, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group-addon input-sm">
                                <Label class="control-label">
                                    <span class="fa fa-male"></span>
                                    @Html.RadioButtonFor(model => model.Employee.Gender, Cons.MaleChar)
                                </Label>
                            </div>
                            <div class="input-group-addon input-sm">
                                <Label class="control-label">
                                    <span class="fa fa-female"></span>
                                    @Html.RadioButtonFor(model => model.Employee.Gender, Cons.FemaleChar)
                                </Label>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Employee.FTR, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-id-badge"></i></span>
                                @Html.EditorFor(model => model.Employee.FTR, new { htmlAttributes = new { @class = "form-control text-uppercase input-sm", autocompleate = "off" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.FTR, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Employee.SSN, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-medkit"></i></span>
                                @Html.EditorFor(model => model.Employee.SSN, new { htmlAttributes = new { @class = "form-control input-sm", autocompleate = "off" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.SSN, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.Employee.Commission, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-percent"></i></span>
                                @Html.EditorFor(model => model.Employee.Commission, new { htmlAttributes = new { @class = "form-control input-sm", autocompleate = "off" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.Commission, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.Employee.BirthDate, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-birthday-cake"></i></span>
                                @Html.EditorFor(model => model.Employee.BirthDate, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.BirthDate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Employee.JobPositionId, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-briefcase"></i></span>
                                @Html.DropDownListFor(model => model.Employee.JobPositionId, Model.JobPositions, "", htmlAttributes: new { @class = "form-control input-sm" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Employee.JobPositionId, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group col-md-8">
                        @Html.LabelFor(model => model.Employee.Email, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-at"></i></span>
                            @Html.EditorFor(model => model.Employee.Email, new { htmlAttributes = new { @class = "form-control text-lowercase input-sm", autocompleate = "off" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Employee.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Employee.Phone, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                            @Html.EditorFor(model => model.Employee.Phone, new { htmlAttributes = new { @class = "form-control input-sm", autocompleate = "off" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Employee.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            @Html.HiddenFor(m => m.Employee.PersonId)
            @Html.HiddenFor(m => m.Employee.HireDate)
            @Html.HiddenFor(m => m.Employee.ImagePath)
            @Html.HiddenFor(m => m.DropImage)
        </div>

        <div id="addresses" class="tab-pane fade in  panel-group" style="overflow-y:auto; max-height:380px">
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.Partial("_AddressGroup", Model.Addresses)
                </div>
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $("#Employee_Phone").mask("(999) 999 99 99");

        $("#Employee_SSN").mask("99999999999");

        $("#Employee_FTR").mask("aaa*99999****");
    });
</script>