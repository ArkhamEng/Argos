@model Argos.ViewModels.Generic.PersonFilterViewModel<ClientVm>
@using Argos.ViewModels.Generic

@{
    ViewBag.Title = "Clientes";
    ViewBag.Class = "fa fa-users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-title">
    <div class="title_left col-xs-12">
        <h3>
            <a class="@ViewBag.Class"></a>
            @ViewBag.Title
        </h3>
    </div>
    <div class="title_right col-xs-12">
        <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control text-uppercase", placeholder = "Búsqueda por..", type = "text" })
                <span class="input-group-btn">
                    <button class="btn btn-default " type="button" title="Buscar productos" onclick="SearchClients()">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="hidden-xs">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownList("ddlStateId", Model.States, "Estado / Entidad", new { @class = "form-control col-md-6  has-feedback-left text-uppercase" })
                        <span class="fa fa-list form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        @Html.DropDownList("ddlCityId", Model.Cities, "Ciudad / Municipio", new { @class = "form-control col-md-6  has-feedback-left text-uppercase" })
                        <span class="fa fa-list form-control-feedback left" aria-hidden="true"></span>
                    </div>
                </div>
                <ul class="nav navbar-right panel_toolbox">

                    <li class="dropdown">
                        <button class="btn btn-default" type="button" id="btnClear" title="Recargar" onclick="Clear()">
                            <span class="glyphicon glyphicon-refresh"></span>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-success" title="Registrar nuevo producto" onclick="BeginAddClient()">
                            <i class="fa  fa-plus"></i>
                        </button>
                    </li>
                    <li>
                        <a class="collapse-link collapsed"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <div id="divClientList" style="min-height:300px">
                    @Html.Partial("_ClientList", Model.Entities)
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    $(document).ready(function ()
    {
        SetCascade('#ddlStateId', '#ddlCityId', '@Url.Action("GetCities","Configuration")');
    });

   
    function BeginAddClient()
    {
        ShowClientModal(SearchById, null, null);
    }

    function BeginUpdateClient(id)
    {
        ShowClientModal(SearchById,null, id)
    }

    function SearchById(id)
    {
        ExecuteAjax('@Url.Action("SearchClients")', { id: id }, function (response)
        {
            $("#divClientList").html(response);
        });
    }

    function SearchClients()
    {
        ShowLoading('static');

        var data = {
            ftr: $("#txtFtr").val(), name: $("#txtName").val(),
            stateId: $("#ddlStateId").val(), cityId: $("#ddlCityId").val()
        };

        ExecuteAjax('@Url.Action("SearchClients")', data, function (response)
        {
            HideLoading(function ()
            {
                $("#divClientList").html(response);
            });
        });
    }

    function Clear()
    {
        window.location = window.location;
    }
</script>