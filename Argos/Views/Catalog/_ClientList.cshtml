@model IEnumerable<Argos.Models.Catalog.Client>


<table id="TbClientList" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Cliente")
            </th>
            <th>
                @Html.DisplayName("Dirección")
            </th>
            <th>
                @Html.DisplayName("Contacto")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-4">
                    <span class="fa fa-id-badge control-label"></span>   @Html.DisplayFor(modelItem => item.FTR)<br />
                    <span class="fa fa-user control-label"></span>   @Html.DisplayFor(modelItem => item.Name)<br />
                    <span class="fa fa-black-tie control-label"></span>   @Html.DisplayFor(modelItem => item.BusinessName)
                </td>
                <td class="col-md-4">
                    <span class="fa fa-street-view control-label"></span>  @Html.DisplayFor(modelItem => item.Street) No. @Html.DisplayFor(modelItem => item.OutNumber) Int @Html.DisplayFor(modelItem => item.InNumber) <br />
                    @Html.DisplayFor(modelItem => item.Location)  @Html.DisplayFor(modelItem => item.ZipCode) <br />
                    @Html.DisplayFor(modelItem => item.City.State.Name), @Html.DisplayFor(modelItem => item.City.Name)
                </td>

                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.Phone)<br />
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td class="col-md-1">
                    @Html.ActionLink("Edit", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ClientId })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function()
    {
        Paginate("#TbClientList", 5,false)
    });
</script>