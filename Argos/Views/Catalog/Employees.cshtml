@model Argos.ViewModels.Generic.PersonFilterViewModel<Employee>
@using Argos.Models.HumanResources
@{
    ViewBag.Title = "Catálogo de Empleados";
    ViewBag.Class = "fa fa-black-tie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="panel panel-danger">
    <div class="panel-body">
        <div class="col-md-11">
            <div class="input-group ">
                @Html.TextBox("txtFtr", "", htmlAttributes: new
           {
               @class = "form-control",
               placeholder = "RFC",
               style = "width:30%"
           })
                @Html.TextBox("txtName", "", htmlAttributes: new
           {
               @class = "form-control",
               placeholder = "Clave o nombre del empleado",
               style = "width:70%"
           })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnSearch" onclick="SearchEmployees()">
                        <span class="glyphicon glyphicon-search"></span>
                        <u>B</u>uscar
                    </button>
                    <button type="button" class="btn btn-success" id="btnCreate" onclick="BeginAddEmployee()">
                        <span class="glyphicon  glyphicon-file"></span>
                        <u>N</u>uevo
                    </button>
                </span>
            </div>
        </div>
        
        <div class="col-md-10" style="margin-top:10px">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                @Html.DropDownList("ddlStateId", Model.States, "Estado / Entidad", new { @class = "form-control" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                @Html.DropDownList("ddlCityId", Model.Cities, "Ciudad / Municipio", new { @class = "form-control" })
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button" id="btnClear" onclick="Clear()">
                        <span class="glyphicon glyphicon-refresh"></span>
                        <u>L</u>impiar
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div id="divEmployeeList" class="panel-body" style="min-height:300px">
        @Html.Partial("_EmployeeList", Model.Entities)
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        SetCascade('#ddlStateId', '#ddlCityId', '@Url.Action("GetCities","Configuration")');

        $("#liEmployees").addClass("active");
    });

    function BeginAddEmployee()
    {
        ShowEmployeeModal(SearchById, null, null);
    }

    function BeginUpdateEmployee(id)
    {
        ShowEmployeeModal(SearchById, null, id);
    }


    function SearchById(id)
    {
        ExecuteAjax('@Url.Action("SearchEmployees")', { id: id }, function (response)
        {
            $("#divEmployeeList").html(response);
        });
    }

    function SearchEmployees()
    {
        ShowLoading('static');

        var data = {
            ftr: $("#txtFtr").val(), name: $("#txtName").val(),
            stateId: $("#ddlStateId").val(), cityId: $("#ddlCityId").val()
        };

        ExecuteAjax('@Url.Action("SearchEmployees")', data, function (response) {
            HideLoading(function ()
            {
                $("#divEmployeeList").html(response);
            });
        });
    }

    function Clear()
    {
        window.location = window.location;
    }
</script>