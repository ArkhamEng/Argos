@model IEnumerable<Argos.Models.Operative.Supplier>
@using Argos.Support

<table id="TbSupplierList" class="table jambo_table dataTable table-hover">
    <thead>
        <tr class="heading">
          
            <th class="column-title">
                @Html.DisplayName("Proveedor")
            </th>
            <th class="column-title">
                @Html.DisplayName("Dirección")
            </th>
            <th class="column-title">
                @Html.DisplayName("Contacto")
            </th>

            <th/>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr ondblclick="BeginUpdateSupplier(@item.PersonId)">
               
                <td class="col-md-4">
                    <span class="fa fa-user control-label"></span>
                    <a class="text-capitalize">@Html.DisplayFor(modelItem => item.Name)</a><br />
                    <span class="fa fa-black-tie control-label"></span>
                    <a class="text-capitalize">@Html.DisplayFor(modelItem => item.BusinessName)</a><br />
                    <span class="fa fa-id-badge control-label"></span>
                    <a class="text-uppercase">@item.FTR</a>
                </td>
                <td class="col-md-4 text-capitalize">
                    <span class="fa fa-street-view control-label"></span>
                    @Html.DisplayFor(modelItem => item.Street) No. @Html.DisplayFor(modelItem => item.OutNumber) Int @Html.DisplayFor(modelItem => item.InNumber) <br />
                    @Html.DisplayFor(modelItem => item.Location)  @Html.DisplayFor(modelItem => item.ZipCode) <br />
                    @Html.DisplayFor(modelItem => item.Town.State.Name), @Html.DisplayFor(modelItem => item.Town.Name)
                </td>

                <td class="col-md-3 text-lowercase">
                    <span class="fa fa-phone"></span>
                    @Html.DisplayFor(modelItem => item.Phone)<br />

                    <span class="fa fa-envelope"></span>
                    @Html.DisplayFor(modelItem => item.Email)<br />

                    <span class="fa fa-globe"></span>
                    @Html.DisplayFor(modelItem => item.WebSite)
                </td>

                <td class="col-md-1">
                    <button class="btn btn-danger" type="button" onclick="BeginDelete('@item.PersonId','@item.Name')">
                        <span class="fa fa-trash"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    var idSupplier = 0;

    $(document).ready(function ()
    {
        Paginate("#TbSupplierList", 5, false)
    });

    function BeginDelete(id, name) {
        idSupplier = id;
        var hdr = "Eliminar Proveedor!";
        var body = "¿Esta seguro que deseas eliminar el proveedor " + name + "?";
        ShowMessage(hdr, body, 'confirm', DeleteSupplier, null, 'static')

    }

    function DeleteSupplier() {
        ExecuteAjax('@Url.Action("DeleteSupplier","Catalog")', { id: idSupplier }, function (response) {
            HideLoading(function () {
                if (response.Result == '@Cons.ResponseSuccess') {
                    ShowMessage(response.Header, response.Body, response.Result, null, SearchProviders, 'static');
                }
                else {
                    ShowMessage(response.Header, response.Body, response.Result, null, null, 'static');
                }
            });
        });
    }



</script>