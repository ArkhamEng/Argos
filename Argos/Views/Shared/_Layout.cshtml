
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    @Html.Partial("_Modal")
    @Html.Partial("_Loading")
    @Html.Partial("_Message")

<div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#337ab7">
    <div class="col-xs-10 col-sm-8 col-md-2 pull-left">
        <div class="col-xs-6 col-sm-4 col-md-12">

                <img src="~/Images/LogoHeader.gif" class="img-responsive" id="sidebarCollapse"
                     onmouseover="SetPointer(this)" style="max-height:60px" />
        </div>
    </div>
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">

            <p style="color:whitesmoke !important; font-size:18pt;" class="nav navbar-nav">
                <span class="@ViewBag.Class"></span>
                @ViewBag.Title
            </p>

            @*@Html.Partial("_LoginPartial")*@
        </div>
    </div>
</div>

<div class="wrapper">
    @Html.Partial("_SideBar")

    <div id="content" class="container-fluid">
        @RenderBody()
    </div>

</div>



@RenderSection("scripts", required: false)