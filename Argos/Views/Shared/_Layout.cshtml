<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="description" content="">
    <meta name="author" content="">

 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @Scripts.Render("~/bundles/custom")
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation colores azules #265a88 -->
        <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:#337ab7;" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="color:whitesmoke">Argos v.1.0</a>
            </div>
      
            @Html.Partial("_TopMenu")

            @Html.Partial("_SideMenu")
        </nav>
        @Html.Partial("_Modal")
        @Html.Partial("_Loading")
        @Html.Partial("_Confirm")
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>

<script>
   
    function ToggleMenu()
    {
        console.log("Togleando");
        
      $('body').toggleClass('fixed-nav');
      $('nav').toggleClass('fixed-top static-top');
       
    }
  

</script>