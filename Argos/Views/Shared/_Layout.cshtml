@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    <a href='@Url.Action("Index","Home")' class="site_title row">
                        <i>
                            <img src="~/Images/Logo.png" class="img-container" style="max-height:35px; max-width:25px; margin-top:-8px; margin-left:5px">
                        </i>
                        <span>rgos V2.0!</span>
                    </a>
                </div>
                <div class="clearfix"></div>

                <!-- menu profile quick info -->
                <div class="profile clearfix">
                    <div class="profile_pic">
                        <img src="~/Images/user.png" alt="..." class="img-circle profile_img">
                    </div>
                    <div class="profile_info">
                        <span>Welcome,</span>
                        <h2>Ariel Camacho</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
              
                <br />
             
                @Html.Partial("_SideMenu")
            
                @Html.Partial("_SideFooter")
            </div>
        </div>
        
        @Html.Partial("_TopNav")
       
        <div class="right_col" role="main">
            
            @Html.Partial("_Modal")
            @Html.Partial("_Loading")
            @Html.Partial("_Message")
            @Html.Partial("_ChildModal")
            
            @RenderBody()

            <div id="divCatalogModal"></div>
        </div>
      
        @Html.Partial("_Footer")
        
    </div>
</div>






