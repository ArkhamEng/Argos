@model IEnumerable<Supplier>
@using Argos.Models.Purchasing


<div class="modal-content  col-md-12">
    <div class="modal-header">
        <div>
            <h3 class="modal-title col-md-6">
                <span class="fa fa-handshake-o"></span>
                Proveedores
            </h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 top-search">
                @Html.TextBox("SupplierFilter", "", htmlAttributes: new { @class = "form-control text-uppercase input-sm", placeholder = "Búsqueda por..", type = "text" })
            </div>
            <table id="tbAssigSupplier" class="table jambo_table table-bordered small">
                <thead>
                    <tr class="heading">
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BusinessName)
                        </th>
                        <th>
                            @Html.DisplayName("Crédito")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditLimit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditDays)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditBalance)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td class="text-capitalize">
                                @Html.DisplayFor(modelItem => item.Name)
                                @Html.HiddenFor(modelItem => item.Name)
                                @Html.HiddenFor(modelItem => item.EntityId)
                            </td>

                            <td class="text-capitalize">
                                @Html.DisplayFor(modelItem => item.BusinessName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditStatus.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditLimit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditBalance)
                            </td>
                            <td>
                                <button class="btn btn-success btn-xs pull-right" type="button" id="btnAssing" title="seleccionar el proveedor">
                                    <span class="fa fa-check"></span>
                                    seleccionar
                                </button>
                            </td>
                        </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
  
</div>

<script>

    $(document).ready(function ()
    {
       Paginate("#tbAssigSupplier", 10, false, "#SupplierFilter",false);
    });


</script>